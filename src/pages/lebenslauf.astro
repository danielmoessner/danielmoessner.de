---
import Cta from "../components/Cta.astro";
import CvStep from "../components/CvStep.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Layout from "../layouts/Layout.astro";
import { CV } from "../content/cv.js";
---

<Layout title="Daniel MÃ¶ssner" description="">
  <Nav />
  <section>
    <article>
      <div style="display: flex; justify-content: space-between;">
        <h1 style="margin-top: 0;">CV - Lebenslauf</h1>
        <button onclick="window.open('/cv', '_blank').print();">Print</button>
      </div>
      <p>
        Located in {CV.location} and {CV.age} years old <br />
        <a target="_blank" href={CV.linkedin}>LinkedIn</a>
        <br />
        <a target="_blank" href={CV.github}>GitHub</a>
        <br />
      </p>
      <h2>Professional Profile</h2>
      <p>
        <i>
          {CV.oneliner}
        </i>
      </p>
      <p>
        {CV.summary}
      </p>
      <h2>Core Skills</h2>
      <ul>
        {
          Object.entries(CV.skills).map(([key, value]) => (
            <li>
              <b>{key}:</b> {value}
            </li>
          ))
        }
      </ul>
      <h2>Career Summary</h2>
      {
        CV.steps.map((step) => (
          <CvStep date={step.date} company={step.company} subtitle={step.job}>
            <ul>
              {step.work.map((w) => (
                <li>{w}</li>
              ))}
            </ul>
          </CvStep>
        ))
      }
      <Cta />
    </article>
  </section>
  <Footer />
</Layout>
